<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gmk.kwl.plasmaui.plasmademo.MainActivity">

<gmk.kwl.plasmaui.view.PlasmaView
    custom:duration="600;500;2000;1000"
    custom:delay="500;400;0;1000"
    custom:animation="shake+fadein;move:50:0+fadeout"
    android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="200px">
    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</gmk.kwl.plasmaui.view.PlasmaView>

    <gmk.kwl.plasmaui.view.PlasmaView
        custom:auto="true"
        custom:delay="1000"
        custom:duration="500"
        custom:distance="0"
        custom:animation="pop"
        android:layout_toRightOf="@id/text1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        />
    </gmk.kwl.plasmaui.view.PlasmaView>

</RelativeLayout>
